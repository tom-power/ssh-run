#compdef sshRun

_completions=()

_withHosts() {
  _completions=($(~/bin/sshRun --hosts))
}

host=""
_withScripts() {
  _completions=($(~/bin/sshRun $host --scripts))
}

_withSshOption() {  
  _completions+=('--ssh')
}

_withExplainOption() {  
  _completions+=('--explain')
}

_addCompletions() {
  _describe -t _completions $1 _completions && ret=0     
}

_hosts() {
  _withHosts
  _addCompletions "hosts"
}

_scriptsAndHostOptions() {
  host=${words[2]}
  _withScripts
  _withSshOption
  _withExplainOption
  _addCompletions "script"
}

_scriptOptions() {  
  script=${words[3]}
  if [[ $script != '--explain' ]]; then
    _withExplainOption
    _addCompletions "scriptOptions"
  fi
}

_arguments -s \
  '1:host:_hosts' \
  '2:script:_scriptsAndHostOptions' \
  '3:scriptOptions:_scriptOptions'
